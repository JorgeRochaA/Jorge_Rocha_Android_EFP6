<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jorge_Rocha_Android_EFP6.Views.AskPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="AskPage"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtAskDescription" Placeholder="Ask Desciptiopn" Keyboard="Chat"></Entry>
            <Entry x:Name="txtImageURL" Placeholder="Image URL" Keyboard="Chat"></Entry>
            <Entry x:Name="txtAskDetail" Placeholder="Ask Detail" Keyboard="Chat"></Entry>

            <Button x:Name="BtnAdd" Text="Add Question" Clicked="BtnAdd_Clicked"/>
            <Button x:Name="BtnCancel" Text="Cancel" Clicked="BtnCancel_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>